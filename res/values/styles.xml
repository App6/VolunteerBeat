    <style name="vbRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/vb_ratingbar_full</item>
        <item name="android:minHeight">30dip</item>
        <item name="android:maxHeight">30dip</item>
    </style>

    <style name="button_grey">
        <item name="android:background">@drawable/button_grey</item>
    </style>

    <style name="button_green">
        <item name="android:background">@drawable/button_green</item>
    </style>

</resources>